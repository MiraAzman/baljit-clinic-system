                                            <label id="selectLocation" class="searchbox">
                                            <select class="form-control" id="ddlReceiveLoc" name="ddlReceiveLoc" rel="popover-hover" data-original-title="Receive Location" data-content="Select Receive Location." style="width:300px;cursor:default;">
