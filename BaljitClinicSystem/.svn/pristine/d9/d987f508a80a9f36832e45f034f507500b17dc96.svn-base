                  //  rdPrdCat: "required"
                },
                messages: {
                    txtUOMCode: "UOM Code cannot be blank.",
                    txtUOMDesc: "UOM Name cannot be blank."
                     
                     
                 //   rdPrdCate: "Product category must be selected."
                },
                errorContainer: container,
                errorLabelContainer: $("ol", container),
                wrapper: 'li'
            });      
            
            $("#chkrecstatus").click(function(){
                if ( $('#chkrecstatus').is(":checked") )
                    $('#chkrecstatus').val('1'); 
                else
                    $('#chkrecstatus').val('0');            
            });
        });
    };
    loadScript("js/jquery.numeric.js", pagefunction);
      
    //c01
    //Aaron
    function confirm(){
        var $validUOM = $("#form_AddUOM").valid();

        if ($validUOM === true) {
            document.getElementById("btnSave").disabled = true;
            showYesNo({
                title: "Confirmation needed",
                width: 420,
                noClose: true,
                isModal: true,
                body: [
                    "<br><h4>Please confirm all the details entered.<h4><br>"
                ],
                show: function(){},
                Yes: {
                    text: "Yes",
                    opt: function(){
                        saveUOM();
                        hideYesNo();
                    }
                },
                No: {
                    text:"No",
                    opt: function(){
                        document.getElementById("btnSave").disabled = false;
                        hideYesNo();
                    }
                }
            });
        }
    }
    //c01
    function saveUOM(){
        var $this = $(this);
        $.ajax({
            type: "POST",
            url: "${pageContext.request.contextPath}/Servlet_StockUOM?SFC=INSERT_STKUOM",
            data: {
                ADDUOM: JSON.stringify($('#form_AddUOM').serializeArray()),
                MODE: "ADD_STKUOM"
            },
            dataType: 'json',
            beforeSend: function (xhr) {
                $.showLoadingNoStatus();
            },
            success: function(response,xhr,status){
                if (response.bool === true) {
                    $.bigBoxSuccess({
                        title: "Create UOM SUCCESS.",
                        content: "UOM creation SUCCESS.",
                        timeout: 6000
                    });
                }
                else{
                    $.bigBoxFail({
                        title: "Create UOM FAIL.",
                            content: "There is some error during supplier creation.<br> Please try again...",
                        timeout: 6000
                    });
                }
            },
            error: function (xhr, status, error) {
                $.bigBoxFail({
                    title: "Transaction ERROR",
                    content: "There is some error occur during data transfer. Please try again later",
                    timeout: 6000
                });
            },
            complete: function (xhr, status) {
                if (xhr.status === 200) {
                    $.hideLoadingNoStatus(function () {
                       window.location.href = "#/UOMDetail/" + $('#txtUOMCode').val();
                    }, 500);
                } else {
                    $.hideLoadingNoStatus(function () {
                    }, 0);
                }
            }
        });
    }
