<script src="js/buttonset.js"></script>
<script type="text/javascript">
   
    pageSetUp();
    $('#chkReqType').buttonset();
    $('#chkReqStatus').buttonset();
    $('#rdPrdCat').buttonset();
    
    function StkLookup(lookupType, ToFrom) {
        if (lookupType === 'Stock') {
            showProduct({width: 800, height: 600}).done(function (rowIn) {
                //alert(JSON.stringify(rowIn));
                $("#txtStk"+ToFrom).val(rowIn.stk_stockcode);
            });
        } 
        else if (lookupType === 'StockGroup') {
            showProductGrp({width: 800, height: 600}).done(function (rowIn) {
                $("#txtStkGrp"+ToFrom).val(rowIn.cd_cdcode);             
            });
        }
    }
    
    $().ready(function(){
        
        var container = $('div.errorContainer');
        var validator = $("#form_StkReq_Report").validate({
            rules: {                
                txtReqDateFrom: "required", 
                txtReqDateTo: "required", 
                chkReqStatus: "required",
                chkReqType: "required"
            },
            messages: { 
                txtReqDateFrom: "Request Date(From) cannot be blank.", 
                txtReqDateTo: "Request Date(To) cannot be blank.", 
                chkReqStatus: "Request Status must be selected.",
                chkReqType: "Request Type must be selected."
            },
            onclick: false,
            onfocusout: false,
            errorContainer: container,
            errorLabelContainer: $("ol", container),
            wrapper: 'li'
        });
        
        $("#btnPrintPrev").click(function(){          
            var $validItem = $("#form_StkReq_Report").valid();
            if ($validItem === true) { 
                LoadPrintPreview();
            }
        });
        
        loadScript("js/buttonset.js", function () {
            loadScript("js/excel-export.js", function () {
            });
        });
    
        $("#ddlLoc").prop("disabled", true);            
        $("#ddlComp").change(function(){             
            $('#ddlLoc').empty();            
            var sCompany = this.value;
            if (sCompany !== "") {                
                $.ajax({
                    type: "GET",
                    url: "${pageContext.request.contextPath}/Servlet_Stock?SFC=GET_REL_LOCATION",
                    data: {
                        COMPANY: sCompany
                    },
                    dataType: 'json',
                    success: function(data) {
                        $("select#ddlLoc").append( $("<option>").val("").html("- Select Location -")); 

                        for (var a=0 ; a<data.object1.length ; a++) {                   
                            var arrData = data.object1[a];                
                            $("select#ddlLoc").append( $("<option>")
                                .val(arrData.VALUE)
                                .html(arrData.VALUE)
                            ); 
                        }
                    }
                });                                                           
                $("#ddlLoc").prop("disabled", false); 
            } else 
                $("select#ddlLoc").append( $("<option>").val("").html("- Select Location -")); 
        });
        
        var tempDate = new Date();
        $("#txtReqDateFrom").datepicker({
            numberOfMonths: 2,
            changeMonth: true,
            changeYear: true,
            dateFormat: "yy-mm-dd",
            onSelect: function (selected) {
                $("#txtReqDateTo").datepicker("option", "minDate", selected);
            }
        });
        var fromDate = $.datepicker.formatDate('yy-mm-dd', new Date(tempDate.getFullYear(), tempDate.getMonth() - 4, tempDate.getDate()));
        //$("#txtReqDateFrom").val(fromDate);
        $("#txtReqDateTo").datepicker({
            numberOfMonths: 2,
            changeMonth: true,
            changeYear: true,
            dateFormat: "yy-mm-dd",
            onSelect: function (selected) {
                $("#txtReqDateFrom").datepicker("option", "maxDate", selected);
            }
        });
        $("#txtReqDateTo").datepicker("option", "minDate", fromDate);
        $("#txtReqDateFrom").datepicker("option", "maxDate", tempDate);
    });

    function LoadPrintPreview() {
        var sReqStatus = "", sReqType = "", selReqStatus = "", selReqType = "";
        
        var reqStatusLen = $('input[name="chkReqStatus"]').length;
        for (var a=1 ; a<=reqStatusLen ; a++) {
            if ( $('#chkReqStatus'+a).is(":checked") ) {
                sReqStatus += $('#chkReqStatus'+a).val() + ",";
                selReqStatus += $("label[for='chkReqStatus"+a+"']").text() + " / ";
            }
        }          
        sReqStatus = sReqStatus.substring(0, sReqStatus.length - 1);
        selReqStatus = selReqStatus.substring(0, selReqStatus.length - 3); 
        
        var reqTypeLen = $('input[name="chkReqType"]').length;
        for (var a=1 ; a<=reqTypeLen ; a++) {
            if ( $('#chkReqType'+a).is(":checked") ) {
                sReqType += $('#chkReqType'+a).val() + ",";
                selReqType += $("label[for='chkReqType"+a+"']").text() + " / "; 
            }
        }
        sReqType = sReqType.substring(0, sReqType.length - 1);  
        selReqType = selReqType.substring(0, selReqType.length - 3); 

        loadScript("js/print-preview.js", function () {       
            var jObj = {              
                1: "GET_STKREQ_LIST_REPORT", 
                2: $('#ddlComp').val(), 
                3: $('#ddlLoc').val(),
                4: $('#txtReqDateFrom').val(),
                5: $('#txtReqDateTo').val(), 
                6: $('#txtStkFrom').val(),
                7: $('#txtStkTo').val(),
                8: $('#txtStkGrpFrom').val(),
                9: $('#txtStkGrpTo').val(),
                10: $('input[name=rdPrdCat]:checked').val(),
                11: sReqStatus,
                12: selReqStatus,
                13: sReqType,
                14: selReqType,
                15: ""
            }; 

            var param = {     
                // PO_NO: sPoNo               
            };           
            //alert(JSON.stringify(jObj));               
            var object = {};
            object.procParam = jObj;
            object.jasperName = 'Stk_Request_Report';
            object.procString = 'SP_GET_STOCKREQ_RPT(?,?,?,?,?,?,?,?,?,?,?,?,?,?,?)';
            object.fixParam = param;
            
            printToPage(object);                                           
        });           
    };
</script>
