                , "STOCKCODE": grid.jqGrid('getCell', ids[i], 'sup_code')
                , "FACTOR": grid.jqGrid('getCell', ids[i], 'sup_name')
                , "UOM": grid.jqGrid('getCell', ids[i], 'sup_productgroupcode')
                , "PRICE1": grid.jqGrid('getCell', ids[i], 'sup_statecode')
                , "PRICE2": grid.jqGrid('getCell', ids[i], 'sup_countrycode')
                , "PRICE3": grid.jqGrid('getCell', ids[i], 'sup_isactive')
