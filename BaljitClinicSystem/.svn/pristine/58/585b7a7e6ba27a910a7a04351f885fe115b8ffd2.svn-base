<script type="text/javascript">
    pageSetUp();

    getDLL("ddlState", "GET_CODEDESC", "STATE", "");
    getDLL("ddlCountry", "GET_CODEDESC", "COU", "");

    function getDLL (ddl, method, param1, param2) {
        $.get('${pageContext.request.contextPath}/Servlet_PopulateData', {SFC: 'GET_DLL', METHOD: method, P1: param1, P2: param2}, function (data) {
            for(var i=0; i < data.length; i++){                                                          
                $("#"+ddl).append($("<option>").val(data[i].VALUE).html(data[i].TEXT));
            }     
        });     
    }   
    //validate01
    var pagefunction = function(){
        var container = $('div.errorContainer');
        var validator = $("#form_EditComp").validate({
                    rules: { txtName: "required"
                        },
                    messages: { txtName: "Name cannot be blank."
                        },
                    errorContainer: container,
                    errorLabelContainer: $("ol", container),
                    wrapper: 'li'
                });
    };
    pagefunction();
//    function bindData() {
        $(document).ready(function() {

            $.ajax({
                
                
                type:'POST',
                url:"${pageContext.request.contextPath}/Servlet_SystemEnvironmentSettings",
                data:  {
                    SFC: 'GET_ENVSETTINGS' 
                     
                },
                dataType: 'json',
                success: function(data) {               
                            var arrData = data.object1[0];

                            
                            $('#txtName').val(arrData.sys_orgname); 
                            $('#txtAdd1').val(arrData.sys_orgadd1);
                            $('#txtAdd2').val(arrData.sys_orgadd2);
                            $('#txtAdd3').val(arrData.sys_orgadd3);
                            $('#txtPostcode').val(arrData.sys_orgpostcode);
                            //$('#txtState').val(arrData.comp_statecode);
                            $('#ddlState').val(arrData.sys_orgstate);
                            $('#txtPhoneNo').val(arrData.sys_orgtelephone);
                            $('#txtFaxNo').val(arrData.sys_orgfax);
                            $('#txtRemarks').val(arrData.sys_orgremarks);
                            $('#txtContactPerson').val(arrData.sys_orgcontactperson);
                            $('#txtBusRegNo').val(arrData.sys_orgbusinessregno);
                            $('#txtGSTRegNo').val(arrData.sys_orgbusinessgstno);
                            $('#ddlCountry').val(arrData.sys_orgcountry);
                        }        
                //error:  function(){ alert("FAILED "); } 
            });

                     
        }); 
//    }   
    //c01
    function confirm(){
        var $this = $(this);
        var $validItem = $("#form_EditComp").valid();  //validate01
            if ($validItem === true){
            document.getElementById("btnSave").disabled = true;
            showYesNo({
               title: "Confirmation needed",
               width: 420,
               noClose: true,
               isModal: true,
               body: [
                   "<br><h4>Please confirm all the details entered before save.<h4><br>"
               ],
               show: function(){},
               Yes: {
                   text: "Yes",
                   opt: function(){
                       SaveDetail();
                       hideYesNo();
                   }
               },
               No: {
                   text: "No",
                   opt: function(){
                       document.getElementById("btnSave").disabled = false;
                       hideYesNo();
                   }
               }
            });
        }
    }
    //c01
    function SaveDetail(){

        $.ajax({
            type:'POST',
            url:"${pageContext.request.contextPath}/Servlet_SystemEnvironmentSettings",
            data:  {
                 
                SFC: 'UPDATE_ENVSETTINGS', 
                CODE: $('#txtCode').val(),
                NAME: $('#txtName').val(),
                ADD1: $('#txtAdd1').val(),
                ADD2: $('#txtAdd2').val(),
                ADD3: $('#txtAdd3').val(),
                POSTCODE: $('#txtPostcode').val(),                 
                STATE: $('#ddlState').val(),
                COUNTRY: $('#ddlCountry').val(),
                TEL: $('#txtPhoneNo').val(),
                FAX: $('#txtFaxNo').val(),
                REMARKS: $('#txtRemarks').val(),
                CONTACTPER: $('#txtContactPerson').val(),
                ISACTIVE: $("#chkIsActive").val(),
                BUSREGNO: $('#txtBusRegNo').val(),                
                GSTREGNO: $('#txtGSTRegNo').val()
                       
            },
            dataType: 'json',
            beforeSend: function(xhr){
              $.showLoadingNoStatus();  
            },
            success: function(response,xhr,status) {
                if (response.bool === true){
                        $.bigBoxSuccess({
                            title: "Saved Successfully.",
                            content: "",
                            timeout: 6000
                        });
                    }                             
                else{
                    $.bigBoxFail({
                        title: "Save FAIL.",
                        content: "There is some error when saving the details.<br>Please try again later...",
                        timeout: 6000
                    });
                } 
            },
            error: function(xhr,status,error){
                $.bigBoxFail({
                    title: "Transaction ERROR",
                    content: "There is some error occur during data transfer. Please try again later",
                    timeout: 6000
        });
            },
            complete: function(xhr,status){
                if (xhr.status === 200) {
                    $.hideLoadingNoStatus(function () {
                       location.reload();
                    }, 500);
                } else {
                    $.hideLoadingNoStatus(function () {
                    }, 0);
                }
    }
        });
    }
    //c01
</script>
