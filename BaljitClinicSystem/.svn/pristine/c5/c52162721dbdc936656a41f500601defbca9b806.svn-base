<script type="text/javascript">
    //re01
    //pageSetUp();
    
    getDLL("ddlArea", "GET_CODEDESC", "AREA", "");
    getDLL("ddlState", "GET_CODEDESC", "STATE", "");
    getDLL("ddlCountry", "GET_CODEDESC", "COU", "");
    getDLL("ddlGSTCodePurchase", "GET_ACTIVEGSTCODE", "PURCHASE", "");
    getDLL("ddlGSTCodeSupply", "GET_ACTIVEGSTCODE", "SUPPLY", "");

    function getDLL (ddl, method, param1, param2) {
        $.get('${pageContext.request.contextPath}/Servlet_PopulateData', {SFC: 'GET_DLL', METHOD: method, P1: param1, P2: param2}, function (data) {
            for(var i=0; i < data.length; i++){                                                          
                $("#"+ddl).append($("<option>").val(data[i].VALUE).html(data[i].TEXT));
            }     
        });     
    }        
    
    function bindData(sParam) {
        $(document).ready(function() {

            $("#chkrecstatus").click(function(){
                if ( $('#chkrecstatus').is(":checked") )
                    $('#chkrecstatus').val('1'); 
                else
                    $('#chkrecstatus').val('0');            
            });

            $("#chkIsActive").click(function(){
                if ( $('#chkIsActive').is(":checked") )
                    $('#chkIsActive').val('Y'); 
                else
                    $('#chkIsActive').val('N');            
            });

            $("#chkGSTInclusive").click(function(){
                if ( $('#chkGSTInclusive').is(":checked") )
                    $('#chkGSTInclusive').val('Y'); 
                else
                    $('#chkGSTInclusive').val('N');            
            });

            $("#wid-id-GST").hide();        

            var strCode = sParam.COMPCODE;
            var request = $.ajax({
                type:'POST',
                url:"${pageContext.request.contextPath}/Servlet_Stock",
                data:  {
                    SFC: 'VIEW_COMP_DETAIL', 
                    CODE: strCode 
                },
                dataType: 'json',
                success: function(data) {               
                            var arrData = data.object1[0];

                            $('#txtCode').val(arrData.comp_code);
                            $('#txtName').val(arrData.comp_name); 
                            $('#txtAdd1').val(arrData.comp_add1);
                            $('#txtAdd2').val(arrData.comp_add2);
                            $('#txtAdd3').val(arrData.comp_add3);
                            $('#txtPostcode').val(arrData.comp_postcode);
                            //$('#txtState').val(arrData.comp_statecode);
                            $('#ddlState').val(arrData.comp_statecode);
                            $('#txtPhoneNo').val(arrData.comp_telephone);
                            $('#txtFaxNo').val(arrData.comp_fax);
                            $('#txtRemarks').val(arrData.comp_remarks);
                            $('#txtContactPerson').val(arrData.comp_contactperson);
                            $('#txtBusRegNo').val(arrData.comp_businessregno);
                            $('#txtAccGroup').val(arrData.comp_accountgroup);
                            $('#txtAgent').val(arrData.comp_agent);
                            $('#txtCreditTerm').val(arrData.comp_creditterm);
                            $('#txtCreditLimit').val(arrData.comp_creditlimit);
                            $('#txtAgingOn').val(arrData.comp_agingon);
                            $('#txtCurrCode').val(arrData.comp_currencycode);

                            $('#ddlArea').val(arrData.comp_areacode);
                            $('#ddlCountry').val(arrData.comp_countrycode);

                            if(arrData.comp_isactive === 'Y'){ 
                                $('#chkIsActive').prop('checked', true); 
                                $('#chkIsActive').val('Y');
                            } else 
                                $('#chkIsActive').val('N');

                            if(arrData.comp_isgst === 'Y'){                           
                                $("#chkIsGST").prop("checked", true); 
                                $('#chkIsGST').val('Y');

                                $("#wid-id-GST").show();  
                                $('#ddlGSTCodePurchase').val(arrData.comp_gstcode_purchase);
                                $('#ddlGSTCodeSupply').val(arrData.comp_gstcode_supply);
                                $('#txtGSTRegNo').val(arrData.comp_gstregno); 
                               
                                if(arrData.comp_gstinclusive === 'Y'){ 
                                    $('#chkGSTInclusive').prop('checked', true); 
                                    $('#chkGSTInclusive').val('Y');
                                } else {
                                    $('#chkGSTInclusive').val('N');
                                }

                            } else {
                                $('#chkIsGST').val('N');

                                tempGSTCodeSupply = "";    //reset GST info of previously viewed company
                                tempGSTCodePurchase = "";
                                tempGSTRegNo = "";      
                                tempGSTInclusive = "";  
                            }
                            if(arrData.recstatus === '1'){ 
                                $('#chkrecstatus').prop('checked', true); 
                                $('#chkrecstatus').val('1');
                            } else 
                                $('#chkrecstatus').val('0');
                            //alert("SUCCESS "); 
                        }        
                //error:  function(){ alert("FAILED "); } 
            });

            $("#chkIsGST").click(function(){
                if ( $('#chkIsGST').is(":checked") ) {

                    $('#chkIsGST').val('Y');

                    $('#ddlGSTCodePurchase').val(tempGSTCodePurchase); 
                    $('#ddlGSTCodeSupply').val(tempGSTCodeSupply);
                    $('#txtGSTRegNo').val(tempGSTRegNo);    

                    if(tempGSTInclusive === 'Y'){ 
                        $('#chkGSTInclusive').prop('checked', true); 
                        $('#chkGSTInclusive').val('Y');
                    } else {
                        $('#chkGSTInclusive').val('N');
                    }               
                    $("#wid-id-GST").show(1500);

                } else {

                    $('#chkIsGST').val('N');   

                    tempGSTCodePurchase = $('#ddlGSTCodePurchase').val();
                    tempGSTCodeSupply = $('#ddlGSTCodeSupply').val();
                    tempGSTRegNo = $('#txtGSTRegNo').val();     
                    tempGSTInclusive = $('#chkGSTInclusive').val();

                    $("#wid-id-GST").hide(1500);
                    $('#ddlGSTCodePurchase').val('');  //reset GST data
                    $('#ddlGSTCodeSupply').val('');
                    $('#txtGSTRegNo').val('');      
                    $('#chkGSTInclusive').val('');  
                }
            });         
        }); 
    }   
    //re01
    var pagefunction = function() {

        $(".numeric").numeric();   //re01
        $("#wid-id-GST").hide();  

        var container = $('div.errorContainer');
        var validator = $("#form_EditComp").validate({
            rules: {
                txtName: "required"
            },
            messages: {
                txtName: "Name cannot be blank."
            },
            //onfocusout: false,
            //onkeyup: false,
            errorContainer: container,
            errorLabelContainer: $("ol", container),
            wrapper: 'li'
        });  //end of validate
    };
    
    pagefunction();  //re01
    
    function SaveDetail(){
        var $validItem = $("#form_EditComp").valid();  //re01
    //c01
    //Aaron
    //add confirmation box and loading status when user try to update the existing record
        if ($validItem === true){   //re01
        document.getElementById("btnSave").disabled = true;
        showYesNo({
            title: "Confirmation needed",
            width: 420,
            noClose: true,
            isModal: true,
            body: [
                "<br><h4>Are you sure to proceed?<h4><br>"
            ],
            show: function(){},
            Yes:{
               text: "Yes",
               opt: function(){
                   updateCompDetail();
                   hideYesNo();
                   
               }
            },
            No:{
                text: "No",
                opt: function(){
                    document.getElementById("btnSave").disabled = false;
                    hideYesNo();
                }
            }
        });
    }
        //c01
        //Aaron
        //c02
        function updateCompDetail(){
        $.ajax({
            type:'POST',
            url:"${pageContext.request.contextPath}/Servlet_Stock",
            data:  {
                FUNCTION: 'EDIT',
                SFC: 'UPDATE_COMPANY', 
                CODE: $('#txtCode').val(),
                NAME: $('#txtName').val(),
                ADD1: $('#txtAdd1').val(),
                ADD2: $('#txtAdd2').val(),
                ADD3: $('#txtAdd3').val(),
                POSTCODE: $('#txtPostcode').val(),
                AREA: $('#ddlArea').val(),
                //STATE: $('#txtState').val(),
                STATE: $('#ddlState').val(),
                COUNTRY: $('#ddlCountry').val(),
                TEL: $('#txtPhoneNo').val(),
                FAX: $('#txtFaxNo').val(),
                REMARKS: $('#txtRemarks').val(),
                CONTACTPER: $('#txtContactPerson').val(),
                ISACTIVE: $("#chkIsActive").val(),
                BUSREGNO: $('#txtBusRegNo').val(),
                ACCGROUP: $('#txtAccGroup').val(),
                //BUSTYPE: $('#txtCode').val(),
                AGENT: $('#txtAgent').val(),
                CREDITTERM: $('#txtCreditTerm').val(),
                CREDITLIMIT: $('#txtCreditLimit').val(),
                AGINGON: $('#txtAgingOn').val(),
                CURRCODE: $('#txtCurrCode').val(),
                ISGST: $("#chkIsGST").val(),
                GSTCODEPURCHASE: $('#ddlGSTCodePurchase').val(),
                GSTCODESUPPLY: $('#ddlGSTCodeSupply').val(),
                GSTREGNO: $('#txtGSTRegNo').val(),   
                GSTINCLUSIVE: $('#chkGSTInclusive').val(),
                recstatus: $("#chkrecstatus").val()       
            },
            dataType: 'json',
                beforeSend: function(xhr){
                      $.showLoadingNoStatus();  
                    },
                success: function(response,xhr,status) {
                         if (response.bool === true) {                              
                        $.bigBoxSuccess({
                            title: "Saved Successfully.",
                                content: "Company details update successfully.",
                            timeout: 6000
                        });                             
                    }                             
                    else{
                              $.bigBoxFail({
                            title: "Update FAIL.",
                            content: "There is some error when updating the company details.",
                                    timeout: 6000
                                });
                         }
                    },
                    error: function (xhr, status, error) {
                        $.bigBoxFail({
                            title: "Company Setup ERROR",
                            content: "There is some error occur during save Company Setup process. Please try again later",
                            timeout: 6000
                        });
                    },
                    complete: function (xhr, status) {
                        if (xhr.status === 200) {
                            $.hideLoadingNoStatus(function () {
                               window.location.href = "#/CompanyList";
                            }, 500);
                        } else {
                            $.hideLoadingNoStatus(function () {
                            }, 0);
                        }
                    }
        });
      }
        //c02
        //Aaron
    }
</script>
